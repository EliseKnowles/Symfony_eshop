<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>

        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        
        {% block stylesheets %}
        <style>
        button a {
            color: white;
        }
        
        img {
            width: 150px;
            height: 150px;
        }
        </style>
        {% endblock %}

    </head>
    <body>

        <!-- Menu Bootstrap -->
        <nav class="navbar navbar-expand-lg bg-light">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="{{path('panier')}}">{{ 'Panier.panier'|trans }}</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{path('produits')}}">{{ 'Produit.produits'|trans }}</a>
                    </li>
                </ul>
                <a class="nav-link" href="{{path('utilisateur')}}">Mon Compte</a>
            </div>
        </nav>

        <div class="container">
            {% for type, messages in app.flashes %}
                {% for message in messages %}
                    <p class="alert alert-{{ type }}">{{ message }}</p>
                {% endfor %}
            {% endfor %}

            {% block body %}{% endblock %}
        </div>
        
        {% block javascripts %}{% endblock %}
    </body>
</html>